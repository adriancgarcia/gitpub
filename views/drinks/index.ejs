<body>
    <div class="beverage">
        <h1>Welcome to gitPub</h1>
        <ul>
            <% for(let i = 0; i < drinks.length; i++) { %>
                <li><a href= "/drinks/<%= i %>"><%= drinks[i].name
                .split(' ')
                .map(x => x[0].toUpperCase() + x.substr(1).toLowerCase())
                .join(' ')  
                %></a></li>
            <% } %>
        </ul>
    </div>
    
</body>
</html>